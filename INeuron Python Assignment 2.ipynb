     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Enter a word : Aakash\n",
      "The reverse input word is : hsakaA\n"
     ]
    }
   ],
   "source": [
    "word=input(\"Enter a word : \")\n",
    "word=word[::-1]\n",
    "print(\"The reverse input word is :\",word)"
